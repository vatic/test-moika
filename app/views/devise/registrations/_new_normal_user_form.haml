.container
  #login
    = form_for(resource, as: resource_name, url: normal_user_registration_path(resource), :html => {:class => "form-signin"}) do |f|
      = devise_error_messages!
      %fieldset
        %div
          = f.label :email, User.human_attribute_name("email")
          %br/
          = f.email_field :email, :autofocus => true, class: "form-control"
        %div
          = f.label :name, User.human_attribute_name("name")
          %br/
          = f.text_field :name, class: "form-control"
        %div
          = f.label :phone, User.human_attribute_name("phone")
          %br/
          = f.phone_field :phone, class: "form-control"
        %div
          = f.label :password, User.human_attribute_name("password")
          %br/
          = f.password_field :password, class: "form-control"
        %div
          = f.label :password_confirmation, User.human_attribute_name("password_confirmation")
          %br/
          = f.password_field :password_confirmation, class: "form-control"
        = hidden_field_tag 'user[normal]', true
        %div= f.submit t("devise.sign_up"), class: "btn btn-lg btn-primary btn-block"
        %br
        = render "devise/shared/links"
