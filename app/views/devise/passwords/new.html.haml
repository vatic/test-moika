.container
  #login
    %h2.form-signin-heading= t("devise.forgot_your_password")
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post , :class => "form-signin"}) do |f|
      = devise_error_messages!
      %fieldset
        = f.label :email, User.human_attribute_name("email")
        = f.email_field :email, :autofocus => true, class: "form-control"
        %br
        = f.submit t("devise.send_me_reset_password_instructions"), class: "btn btn-lg btn-primary btn-block"
        %br
        = render "devise/shared/links"
