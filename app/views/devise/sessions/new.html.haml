.container
  #login
    %h2.form-signin-heading= t("devise.sign_in")
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin"}) do |f|
      %fieldset
        = f.label :email, User.human_attribute_name("email")
        %br/
        = f.email_field :email, :autofocus => true, class: "form-control"
        = f.label :password, User.human_attribute_name("password")
        %br/
        = f.password_field :password, class: "form-control"
        - if devise_mapping.rememberable?
          = f.label :remember_me, class: "checkbox" do
            = t("devise.remember_me")
            = f.check_box :remember_me
        = f.submit t("devise.sign_in"), class: "btn btn-lg btn-primary btn-block"
        %br
        = render "devise/shared/links"
